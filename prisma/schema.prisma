generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id              String   @id @unique @default(uuid())
  user_id         String
  matched_user_id String
  matched_at      DateTime @default(now())

  User        User? @relation("matched", fields: [user_id], references: [id])
  MatchedUser User? @relation("whoMatched", fields: [matched_user_id], references: [id])
}

model Like {
  id         String  @id @unique @default(uuid())
  user_id    String
  to_user_id String
  is_liked   Boolean
  is_seen    Boolean @default(true)

  user User @relation(fields: [user_id], references: [id])
}

model User {
  id               String   @id @default(uuid())
  login            String
  avatar_url       String
  repos_url        String
  name             String
  company          String?
  blog             String?
  location         String?
  email            String?
  hireable         Boolean
  bio              String?
  twitter_username String?
  created_at       DateTime @default(now()) @db.Timestamptz(6)
  updated_at       DateTime @default(now()) @updatedAt @db.Timestamptz(6)
  likes            Like[]
  matches          Match[]  @relation("matched")
  who_matched      Match[]  @relation("whoMatched")
}
